{
  "name": "projecthor",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "concurrently --names api --prefix-colors blue \"bun run dev:api\"",
    "dev:api": "bun --filter @projecthor/api dev",
    "lint": "biome lint",
    "format": "biome format --write",
    "check": "biome check --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.93.2"
  }
}
