{
  "name": "projecthor",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "concurrently --names api,web --prefix-colors blue,green \"bun run dev:api\" \"bun run dev:web\"",
    "dev:api": "bun --filter @projecthor/api dev",
    "dev:web": "bun --filter @projecthor/web dev",
    "lint": "biome lint",
    "format": "biome format --write",
    "check": "biome check --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.93.2"
  }
}
